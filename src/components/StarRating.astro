---
interface Props {
	rating: number,
    allTimeFav: boolean,
}

const { rating, allTimeFav } = Astro.props;

---

<div class="star-rating">
    {Array.from({ length: 5 }, (_, i) => i + 1).map((num) => (
      <span class={`${num <= rating ? 'filled' : 'notFilled'}${allTimeFav ? ' fav' : ''}`}>â˜…</span>
    ))}
</div>

<style>
    .filled {
        color: var(--tx); /* Gray color for filled but not fav */
    }

    .filled.fav {
        color: gold; 
    }

    .notFilled {
        color: var(--bg-3);
    }
</style>