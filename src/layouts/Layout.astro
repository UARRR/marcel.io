---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<slot />

		</main>
	</body>
</html>


<style is:global>
  	@import url('https://fonts.googleapis.com/css2?family=Nunito+Sans:opsz,wght@6..12,400;6..12,700&display=swap');

	

	:root {
		--bg: rgb(255, 252, 240);
		--bg-2: rgb(242, 240, 229);
		--ui: rgb(230, 228, 217);
		--ui-2: rgb(218, 216, 206);
		--ui-3: rgb(206, 205, 195);
		--tx: rgb(16, 15, 15);
		--tx-2: rgb(111, 110, 105);
		--tx-3: rgb(183, 181, 172);
	}

	@media (prefers-color-scheme: dark) {
    :root {
		--bg: rgb(16, 15, 15);
		--bg-2: rgb(28, 27, 26);
		--ui: rgb(40, 39, 38);
		--ui-2: rgb(52, 51, 49);
		--ui-3: rgb(64, 62, 60);
		--tx: rgb(206, 205, 195);
		--tx-2: rgb(135, 133, 128);
		--tx-3: rgb(87, 86, 83);
    }
}

	* {
		padding: 0px;
		margin: 0px;
	}


	html {
		color: var(--tx);
		font-family: 'Nunito Sans', sans-serif;	
		background: var(--bg);
		margin: 100px 0px;
		line-height: 1.4rem;
	}

	main {
		max-width: 700px;
		margin: auto;
	}

	a {
		text-decoration: underline;
		text-decoration-color: var(--tx-3);
		color: var(--tx-2);
	}

	

</style>
