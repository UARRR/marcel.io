---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
interface Props {
	title?: string;
	showingShort?: boolean
}

const { title, showingShort = false } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title || "marcel.io"}</title>
	</head>
	<body>
		

		<main>
			<Header showingShort={showingShort} />
			<div id="titleAndContent">
				{title && <h1>{title}</h1> }
				<slot />
			</div>
			<Footer />
		</main>
	</body>
</html>


<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Nunito+Sans:opsz,wght@6..12,400;6..12,700&family=Nunito:ital,wght@0,400;0,700;1,400&display=swap');

	

	:root {
		--bg: rgb(255, 252, 240);
		--bg-2: rgb(242, 240, 229);
		--ui: rgb(230, 228, 217);
		--ui-2: rgb(218, 216, 206);
		--ui-3: rgb(206, 205, 195);
		--tx: rgb(16, 15, 15);
		--tx-2: rgb(111, 110, 105);
		--tx-3: rgb(183, 181, 172);


		--shadow-color: 45deg 30% 74%;
		--shadow-elevation-low:
			0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.2),
			0.4px 0.7px 0.9px -1.2px hsl(var(--shadow-color) / 0.2),
			0.8px 1.6px 2px -2.5px hsl(var(--shadow-color) / 0.2);
		--shadow-elevation-medium:
			0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.21),
			0.7px 1.4px 1.8px -0.8px hsl(var(--shadow-color) / 0.21),
			1.7px 3.3px 4.2px -1.7px hsl(var(--shadow-color) / 0.21),
			4px 8px 10.1px -2.5px hsl(var(--shadow-color) / 0.21);
		--shadow-elevation-high:
			0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.2),
			1px 1.9px 2.4px -0.4px hsl(var(--shadow-color) / 0.2),
			1.7px 3.4px 4.3px -0.7px hsl(var(--shadow-color) / 0.2),
			2.8px 5.5px 6.9px -1.1px hsl(var(--shadow-color) / 0.2),
			4.4px 8.7px 11px -1.4px hsl(var(--shadow-color) / 0.2),
			6.8px 13.5px 17px -1.8px hsl(var(--shadow-color) / 0.2),
			10.2px 20.4px 25.7px -2.1px hsl(var(--shadow-color) / 0.2),
			15px 30px 37.7px -2.5px hsl(var(--shadow-color) / 0.2);

	}

	@media (prefers-color-scheme: dark) {
    :root {
		--bg: rgb(16, 15, 15);
		--bg-2: rgb(28, 27, 26);
		--ui: rgb(40, 39, 38);
		--ui-2: rgb(52, 51, 49);
		--ui-3: rgb(64, 62, 60);
		--tx: rgb(206, 205, 195);
		--tx-2: rgb(135, 133, 128);
		--tx-3: rgb(87, 86, 83);

		--shadow-color: 0deg 0% 1%;
		--shadow-elevation-low:
			0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.2),
			0.4px 0.7px 0.9px -1.2px hsl(var(--shadow-color) / 0.2),
			0.8px 1.6px 2px -2.5px hsl(var(--shadow-color) / 0.2);
		--shadow-elevation-medium:
			0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.21),
			0.7px 1.4px 1.8px -0.8px hsl(var(--shadow-color) / 0.21),
			1.7px 3.3px 4.2px -1.7px hsl(var(--shadow-color) / 0.21),
			4px 8px 10.1px -2.5px hsl(var(--shadow-color) / 0.21);
		--shadow-elevation-high:
			0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.2),
			1px 1.9px 2.4px -0.4px hsl(var(--shadow-color) / 0.2),
			1.7px 3.4px 4.3px -0.7px hsl(var(--shadow-color) / 0.2),
			2.8px 5.5px 6.9px -1.1px hsl(var(--shadow-color) / 0.2),
			4.4px 8.7px 11px -1.4px hsl(var(--shadow-color) / 0.2),
			6.8px 13.5px 17px -1.8px hsl(var(--shadow-color) / 0.2),
			10.2px 20.4px 25.7px -2.1px hsl(var(--shadow-color) / 0.2),
			15px 30px 37.7px -2.5px hsl(var(--shadow-color) / 0.2);

    }
}

	* {
		padding: 0px;
		margin: 0px;
	}


	html {
		color: var(--tx);
		font-family: 'Nunito Sans', sans-serif;	
		background: var(--bg);
		margin: 100px 0px;
		line-height: 1.2rem;
		font-size: 1.1rem;
	}

	h1, h2, h3 {
		font-family: 'Nunito', sans-serif;
	}

	main {
		max-width: 600px;
		margin: auto;
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}

	#titleAndContent {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	a {
		text-decoration: none;
		color: var(--tx-2);
		transition: transform 0.1s ease;
	}

	a:hover {
		text-decoration: underline;
		text-decoration-color: var(--tx-3);
	}

	a:active {
		transform: translateY(1px);
	}

	hr {
		display: block;
		height: 1px;
		border: 0;
		border-top: 1px solid var(--bg-2);
		margin: 1em 0;
		padding: 0;
	}

	h1 {
		line-height: 2.2rem;
	}


	/* Articles */

	article h2 {
		margin-bottom: 1rem;
	}

	article h3 {
		margin-top: 2rem;
		margin-bottom: 1rem;
	}

	article h2 + h3 {
		margin-top: 2rem;
	}

	article h2 + p {
		margin-top: 1rem
	}

	article p + h2 {
		margin-top: 3rem;
	}

	article p {
		margin-bottom: 1.6rem;
		line-height: 1.5rem;
	}

	article img {
		max-width: 100%;
		height: auto;
		border-radius: 12px;
		/* transform: rotate(-1deg); */
	}

	article ul li::marker,
	article ol li::marker {
		display: inline-block;
		color: var(--tx-3);
	}

	article ul li, 
	article ol li {
		margin-bottom: 0.8rem;
	}

	article ul, 
	article ol {
		padding-left: 0;    /* Removes the default padding */
		margin-left: 0;     /* Removes the default margin */
		/* list-style-position: inside; */
		margin-left: 2rem;
		margin-bottom: 1.6rem;
	}



	article p + hr {
		margin-top: 3rem;
	}

	article hr {
		margin-bottom: 3rem;
	}

	article blockquote {
		border-left: 3px solid var(--ui);
		padding-left: 1rem;
		margin-left: 1rem;
		max-width: 70%;
		margin-bottom: 1.6rem;
	}



	/* Indent second level lists */

	article ul ul, 
	article ul ol,
	article ol ul, 
	article ol ol {
		padding-left: 20px; /* Adjust the indentation as needed */
	}
	
	/* Indent third level lists */
	article ul ul ul, 
	article ol ol ol,
	article ul ul ol, 
	article ol ol ul,
	article ul ol ul, 
	article ol ul ol,
	article ul ol ol, 
	article ol ul ul {
		padding-left: 40px; /* Adjust as needed for the third level */
	}


	pre {
		margin-bottom: 1.6rem;
		padding: 1rem;
		border-radius: 0.5rem;
	}
	
	code {
		font-family: monospace;
		font-size: inherit;
		font-size: 0.8rem;
	}

	/* Code in text */
	p > code,
	li > code,
	dd > code,
	td > code {
		background: var(--bg-2);
		word-wrap: break-word;
		box-decoration-break: clone;
		padding: .1rem .3rem .2rem;
		border-radius: .2rem;
	}
	



    .badge {
        display: inline-block;
        padding: 0.25rem 0.44rem;
        font-size: 0.8rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        border-radius: 10em;
        color: var(--tx);
        background-color: var(--ui-3);
		height: auto;
    }

</style>
