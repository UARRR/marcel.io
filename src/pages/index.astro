---
import Layout from '../layouts/Layout.astro';
import RecentShortsList from '../components/RecentShortsList.astro';
import PostsList from '../components/PostsList.astro';
import Header from '../components/Header.astro';

---

<Layout>
	<main>
		<div class="content">
			<RecentShortsList amountOfShortsVisible={1} />

			<hr />

			<PostsList />

		</div>
	</main>
</Layout>

<style>
	main {
		/* display: flex;
		flex-direction: row;
		gap: 2rem; */
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.shortsSidebar {
		display: flex;
		gap: 1rem;
		flex-shrink: 0;
	}

	.content {
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}

	
	

</style>
