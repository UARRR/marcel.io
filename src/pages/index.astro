---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import RecentShortsList from '../components/RecentShortsList.astro';
import PostsList from '../components/PostsList.astro';
import { Image } from 'astro:assets';
import avatar from '../images/avatar.png';
import Introduction from '../components/Introduction.astro';

---

<Layout title="uarrr.org">
	<main>
		<div class="shortsSidebar">
			<Image src={avatar} alt="Avatar" width="80" height="80" densities={[1.5, 2]} />
			<RecentShortsList />
		</div>

		<div class="content">
			<Introduction />

			<PostsList />
		</div>
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: row;
		gap: 2rem;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.shortsSidebar {
		display: flex;
		gap: 1rem;
		flex-shrink: 0;
	}

	.content {
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}

	
	

</style>
